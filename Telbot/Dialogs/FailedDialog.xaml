<Window x:Class="Telbot.Dialogs.FailedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="200" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        FontFamily="/AddMemberBot;component/Fonts/vazir/#Vazir FD-WOL" BorderThickness="1" BorderBrush="#1f1f1f">
    <Window.Resources>

    </Window.Resources>
    <DockPanel MouseDown="DockPanel_MouseDown">
        <Border DockPanel.Dock="Top" Height="30" Background="#FFFF524B" BorderBrush="Transparent" >
            <Label FlowDirection="RightToLeft" VerticalAlignment="Center"> </Label>
        </Border>

        <Grid>
            <TextBlock x:Name="txt_message" FontSize="13" FlowDirection="RightToLeft" TextWrapping="Wrap" Margin="2,10,2,0" >متنی از سرور</TextBlock>
            <StackPanel Margin="2" VerticalAlignment="Bottom">

                <Button Style="{StaticResource BtnLarge}" Content="بستن" HorizontalAlignment="Center" VerticalAlignment="Stretch" Click="btn_close_dialog"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
