<Window x:Class="Telbot.Dialogs.AddToChannelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        FontFamily="/AutoMemberBot;component/Fonts/vazir/#Vazir FD-WOL" BorderThickness="1" BorderBrush="#1f1f1f" Loaded="Window_Loaded">
    <Window.Resources>

    </Window.Resources>
    <DockPanel MouseDown="DockPanel_MouseDown">
        <Border DockPanel.Dock="Top" Height="30" Background="#FF1C9BCB" BorderBrush="Transparent" >
            <Label Name="lbl_head" FlowDirection="RightToLeft" VerticalAlignment="Center"></Label>
        </Border>

        <Grid>
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="124*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>-->
            
            
            <TextBlock x:Name="txt_message" FontSize="13" FlowDirection="RightToLeft" TextWrapping="Wrap" Margin="2,10,2,0" Grid.ColumnSpan="2" >متنی از سرور</TextBlock>
            
            <StackPanel Margin="2" VerticalAlignment="Bottom">
                <Button Name="btn_close" Style="{StaticResource BtnLarge}" Content="لغو" HorizontalAlignment="Center" VerticalAlignment="Stretch" Click="btn_close_dialog_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
